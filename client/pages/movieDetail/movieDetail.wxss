.movie-wrapper{
  margin: 50rpx 0 150rpx;
}

.movie-image{
  display: block;
  margin: auto;
  width: 135px;
  height: 189px;
}

/* 底端两个按钮 */
button {
  margin-top: 30rpx;
  width: 50%;
  display: inline-block;
}

.title{
  margin-top: 20rpx;
  text-align: center;
}

.description{
  margin: 40rpx;
  opacity: 0.7;
  font-size: 28rpx;
}

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.7;
}

.modalDlg {
  width: 100%;
  height: 290rpx;
  position: fixed;
  bottom: 0%;
  left: 0;
  z-index: 9999;
  /* margin: -370rpx 85rpx; */
  background-color: #fff;
  /* border-radius: 36rpx; */
  display: flex;
  flex-direction: column;
  align-items: center;
}

.btn {
  width: 100%;
  position: fixed;
  bottom: 0%;
}

.btn2{
  width: 100%;
  margin: 0;
}

